{
  "name": "@coffeerunhobby/mcp-ha-connect",
  "version": "0.4.0",
  "description": "Smart home MCP server for Home Assistant plus Local AI integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-ha-connect": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "dev:http": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc",
    "start": "node --env-file=.env dist/index.js",
    "start:http": "node --env-file=.env dist/index.js",
    "test": "vitest run --no-color",
    "test:watch": "vitest --no-color",
    "test:coverage": "vitest run --coverage --no-color",
    "lint": "eslint src tests",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "home-assistant",
    "home-automation",
    "smart-home"
  ],
  "author": "Coffee Run Hobby",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "pino": "^9.5.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.18.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.52.0",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
